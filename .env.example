# WalletStory Environment Variables
# ============================================
# Copy this file to .env.local for local development
# No API keys are strictly required for basic functionality

# ----------------------------------------------------------------------
# API KEYS (Optional - for live on-chain data)
# ----------------------------------------------------------------------
# Get free keys at:
# - Etherscan: https://etherscan.io/apis
# - Alchemy: https://www.alchemy.com/

ETHERSCAN_API_KEY=
ALCHEMY_API_KEY=

# ----------------------------------------------------------------------
# SMART CONTRACT (BSC Testnet)
# ----------------------------------------------------------------------
# Your deployed contract address after running npm run deploy:testnet
NEXT_PUBLIC_CONTRACT_ADDRESS=

# ----------------------------------------------------------------------
# DEPLOYMENT KEYS (Only for contract deployment)
# ----------------------------------------------------------------------
# Get tBNB from: https://www.bnbchain.org/en/testnet-faucet
DEPLOYER_PRIVATE_KEY=
BSCSCAN_API_KEY=

# ----------------------------------------------------------------------
# LOCAL DEVELOPMENT DEFAULTS
# ----------------------------------------------------------------------
# These are safe defaults for local development
# They use mock data when API keys are missing

# RPC URLs (defaults provided for BSC Testnet)
NEXT_PUBLIC_BSC_TESTNET_RPC=https://data-seed-prebsc-1-s1.bnbchain.org:8545
NEXT_PUBLIC_CHAIN_ID=97

# Feature Flags (set to true/false)
NEXT_PUBLIC_USE_MOCK_DATA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ----------------------------------------------------------------------
# MARKETPLACE SETTINGS
# ----------------------------------------------------------------------
# Currency symbol for marketplace
NEXT_PUBLIC_CURRENCY_SYMBOL=GOLD

# Max daily searches per user
NEXT_PUBLIC_MAX_DAILY_SEARCHES=10

# ----------------------------------------------------------------------
# UPSTASH REDIS (Optional - for production persistence)
# ----------------------------------------------------------------------
# Get free credentials at: https://console.upstash.com/
# Creates a Redis database for persisting user profiles, rewards, marketplace
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ----------------------------------------------------------------------
# OPTIONAL: External API Keys for on-chain data
# ----------------------------------------------------------------------
# Arham Intelligence - for on-chain entity data (optional)
ARKHAM_API_KEY=
